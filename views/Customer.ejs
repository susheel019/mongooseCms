<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 style="margin: auto; align-items: center">CMS</h1>
      <form method="POST">
        <% if (locals.cus) { %>

        <div class="mb-3">
          <label for="txtId" class="form-label">Customer Id</label>
          <input
            onkeyup="txtID_keyUp(this) ; txtID_keyUpDelete(this); txtID_keyUpModify(this)"
            type="text"
            class="form-control"
            id="txtId"
            name="txtId"
            value="<%= locals.cus.id %>"
          />
        </div>
        <div class="mb-3">
          <label for="txtName" class="form-label">Customer Name</label>
          <input
            type="text"
            class="form-control"
            id="txtName"
            name="txtName"
            value="<%= locals.cus.name %>"
          />
        </div>
        <div class="mb-3">
          <label for="txtAddress" class="form-label">Customer Address</label>
          <input
            type="text"
            class="form-control"
            id="txtAddress"
            name="txtAddress"
            value="<%= locals.cus.address %>"
          />
        </div>
        <div class="mb-3">
          <label for="txtMobile" class="form-label">Customer Mobile No.</label>
          <input
            type="text"
            class="form-control"
            id="txtMobile"
            name="txtMobile"
            value="<%= locals.cus.mobile %>"
          />
        </div>

        <% }else { %>

        <div class="mb-3">
          <label for="txtId" class="form-label">Customer Id</label>
          <input
            onkeyup="txtID_keyUp(this) ; txtID_keyUpDelete(this); txtID_keyUpModify(this)"
            type="text"
            class="form-control"
            id="txtId"
            name="txtId"
          />
        </div>
        <div class="mb-3">
          <label for="txtName" class="form-label">Customer Name</label>
          <input type="text" class="form-control" id="txtName" name="txtName" />
        </div>
        <div class="mb-3">
          <label for="txtAddress" class="form-label">Customer Address</label>
          <input
            type="text"
            class="form-control"
            id="txtAddress"
            name="txtAddress"
          />
        </div>
        <div class="mb-3">
          <label for="txtMobile" class="form-label">Customer Mobile No.</label>
          <input
            type="text"
            class="form-control"
            id="txtMobile"
            name="txtMobile"
          />
        </div>

        <% } %>

        <button id="btnAdd" name="btnAdd" type="submit" class="btn btn-primary">Add Customer</button>
        <button id ="btnModify" name = "btnModify" type="submit" class="btn btn-primary">Modify Customer</button>
        <a id="ancharSearch" class="btn btn-primary">Search Customer</a>
        <a id="ancharDelete" class="btn btn-primary">Delete Customer</a>
      </form>
      <div class="container">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">SN.</th>
              <th scope="col">Id</th>
              <th scope="col">Name</th>
              <th scope="col">Address</th>
              <th scope="col">Mobile No</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% var counts = 1; for(var e of locals.cusArr){ %>
            <tr>
              <th scope="row"><%= counts %></th>
              <td><%= e.id %></td>
              <td><%= e.name %></td>
              <td><%= e.address %></td>
              <td><%= e.mobile %></td>
              <td>
                <a 
                href="customer/modify/<%= e.id %>"
                class="btn btn-primary" 
                type="submit" value="Edit">
                Modify
              </a>
              </td>
              <td>
                <a
                  href="customer/delete/<%= e.id %>"
                  class="btn btn-danger"
                  type="submit"
                  >Delete
                </a>             
              </td>
            </tr>
            <% counts++ %> <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <script>
      var error = "<%= locals.err %>";
      showAlert = function (err) {
        alert("error " + err);
      };
      if (error) {
        showAlert(error);
      }
    </script>
    <script>
      function ancharSearch(e) {
        var id = "<%= locals.cus %>";
        showAlert = function () {
          alert("Id not found");
        };
        if (id != null) {
          showAlert(id);
        }
      }
    </script>

    <script>
      function txtID_keyUp(e) {
        document
          .getElementById("ancharSearch")
          .setAttribute(
            "href",
            "http://127.0.0.1:7080/customer/search/" + e.value
          );
      }
    </script>

    <script>
      function txtID_keyUpDelete(e) {
        document
          .getElementById("ancharDelete")
          .setAttribute(
            "href",
            "http://127.0.0.1:7080/customer/delete/" + e.value
          );
      }
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
